{
	"name": "Fix My Inputs",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"icons": {
		"16": "hammer16x16.png",
		"48": "hammer48x48.png",
		"128": "hammer128x128.png"
	},
	"version": "1.2",
	"manifest_version": 2,
	"description": "Re-enables any disabled oncut / oncopy / onpaste / oncontextmenu / ondrag / ondrop events for all input text elements in web pages",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"exclude_matches": ["*://*.google.com/*"],
			"js": ["content.js"],
			"all_frames": true
		}
	],
	"permissions": ["storage", "tabs"],
	"browser_action": {
		"default_title": "Fix My Inputs",
		"default_popup": "popup.html"
	}
}
